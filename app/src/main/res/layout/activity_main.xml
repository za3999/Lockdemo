<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.test.yibu.lockdemo.MainActivity">

    <TextView
        android:id="@+id/hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dm_40dp" />

    <Button
        android:id="@+id/scan_btn"
        android:layout_width="@dimen/dm_200dp"
        android:layout_height="@dimen/dm_50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dm_20dp"
        android:text="@string/str_scan" />

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="@dimen/dm_200dp"
        android:layout_height="@dimen/dm_50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dm_20dp"
        android:text="@string/str_cancel" />
</LinearLayout>
